<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonOutlinedStyle">@style/AppTheme.Button.OutlinedButton</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonOutlinedStyle">@style/AppTheme.Button.OutlinedButton</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/AppThemeOverlay.AccentToPrimary</item>
    </style>

    <style name="AppThemeOverlay.AccentToPrimary" parent="">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="Base.TitleLabel" parent="TextAppearance.AppCompat">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TitleLabel" parent="Base.TitleLabel">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="SubtitleLabel">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="Widget.MPM.Menu.Dark.ColoredBackground">
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="Widget.MPM.Menu.CustomOffsets">
        <item name="android:dropDownVerticalOffset">24dp</item>
        <item name="android:dropDownHorizontalOffset">24dp</item>
    </style>

    <style name="Widget.MPM.Menu.Dimmed">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.MPM.Menu.CustomPadding">
        <item name="mpm_paddingBottom">16dp</item>
        <item name="mpm_paddingStart">16dp</item>
        <item name="mpm_paddingEnd">16dp</item>
        <item name="mpm_paddingTop">16dp</item>
    </style>

    <style name="Widget.MPM.Menu.RoundedCorners">
        <!-- See styles-v21 as background with rounded corners works since version 21 -->
    </style>

</resources>
